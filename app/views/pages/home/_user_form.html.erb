<% if (@user.contract_accepted == false && @user.accepted?) || @user.expired? %>
  <div class="modal myOpenModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content bg-linear-blue">
        <div class="modal-header">
          <h5 class="modal-title w-100 text-center">Salut <%= @user.name %></h5>
        </div>
        <%= render "pages/home/user_#{@user.active_request.progress}", user: @user %>
      </div>
    </div>
  </div>
<% end %>