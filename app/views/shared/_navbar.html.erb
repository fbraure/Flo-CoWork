<div class="navbar-flo">
  <a href="/" class="navbar-flo-brand">
    <%= image_tag "logo.png" %>
  </a>
  <div class="d-flex flex-column text-center">
    <% if user_signed_in? %>
      <h3 class="d-none d-md-flex my-0">Bonjour <%= current_user.name %></h3>
    <% end %></h3>
    <h1 class="my-0">Bienvenue au CoWork </h1>
  </div>
  <div class="d-none d-md-block">
    <div class="d-flex align-items-center justify-content-between">
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to "Admin World", admin_dashboard_path, class: "navbar-flo-item navbar-flo-link btn-primary me-2"%>
        <% end %>
        <%= link_to t(".sign_out", default: "Se déconnecter"), destroy_user_session_path, method: :delete , class: "navbar-flo-item navbar-flo-link btn-primary"%>
      <% else %>
        <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path , class: "navbar-flo-item navbar-flo-link btn-primary"%>
      <% end %>
    </div>
  </div>
  <div class="d-block d-md-none">
    <div class="navbar-dropdown">
      <input id="toggle" type="checkbox"/>
      <label class="hamburger" for="toggle">
        <div class="top"></div>
        <div class="meat"></div>
        <div class="bottom"></div>
      </label>
      <div class="nav">
        <div class="nav-wrapper">
          <nav class= "d-flex flex-column">
            <%= link_to "Accueil", root_path, class: "navbar-link" %>
            <% if user_signed_in? %>
              <% if current_user.admin? %>
                <%= link_to "Admin World", admin_dashboard_path, class: "navbar-link"%>
              <% end %>
              <%= link_to "Se déconnecter", destroy_user_session_path, class: "navbar-link", method: :delete %>
            <% else %>
              <%= link_to "Créer un Compte", new_user_registration_path, class: "navbar-link" %>
              <%= link_to "Se connecter", new_user_session_path,  class: "navbar-link" %>
            <% end %>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="navbar-height"></div>
